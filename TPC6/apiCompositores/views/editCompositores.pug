extends layout

block content
  .w3-card-4
    header.w3-container.w3-pink
      h2= titulo
    
    br
    .w3-container
      br
      form.w3-container(method="POST")
        fieldset
          br
          label Id
          input.w3-input.w3-round(type="text" name="id" readonly value=compositor.id)
          br
          label Nome
          input.w3-input.w3-round(type="text" name="nome" value=compositor.nome)
          br
          label Data de Nascimento
          input.w3-input.w3-round(type="date" name="dataNasc" value=compositor.dataNasc)
          br
          label Data de Óbito
          input.w3-input.w3-round(type="date" name="dataObito" value=compositor.dataObito)
          br
          label Período
          br
          br
          select.w3-input.w3-round(name="periodo")
            for p in periodos
              if p.id == compositor.periodo
                option(value=p.id)= p.nome
            for p in periodos
              if p.id != compositor.periodo
                option(value=p.id)= p.nome
          br
          br
          label Biografia
          textarea.w3-input.w3-round(name="bio")= compositor.bio
        br
        button.w3-btn.w3-purple.w3-mb-2(type="submit") Registar
    br

    footer.w3-container.w3-teal
      address Gerado por EngWeb2024 em #{data} - 
        a(href='/compositores') [Voltar]