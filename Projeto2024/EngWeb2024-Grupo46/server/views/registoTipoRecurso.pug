extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1= titulo
            
        .w3-container
            br
            form.w3-container(action=`/tiposRecursos` method="POST" id='form')
                fieldset.w3-cyan
                    legend
                        b Dados do Tipo de Recurso
                    .tipo-data-row-1
                        .resource-data-row
                            label(for="nome") Nome:
                            input.select-option-box(type="text", name="nome", id="nome", required)
                    .row-of-resource-data
                        .tipo-data-row-2
                            label(for="ficheirosObrigatorios") Ficheiros Obrigat√≥rios:
                            .files-container
                                ul.list-mandatory-files(id="mandatoryFilesList")
                                    li.mandatory-file
                                        input.select-option-box(type="text", name="mandatoryFiles[]")
                                        button.button-edit-tipo-files(type="button") Remover
                                button.button-add-tipo-files(type="button", id="addFileBtn") Adicionar Ficheiro

                button.button-submit-tipo(type="button", id="submitBtn") Registar
        br

        footer.w3-container.w3-teal.w3-center
            address Gerado por EngWeb2024 em #{data} - 
                a(href='/recursos') [Voltar]

block scripts
    script(src="/javascripts/registaTipoRecurso.js")
